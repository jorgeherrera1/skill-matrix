{
  "extends": [
    "google",
    "plugin:react/recommended"
  ],
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "max-len": ["error", 100],
    "arrow-parens": ["error", "always"],
    "linebreak-style": "off",
    "require-jsdoc": "off",
    "comma-dangle": ["error", "never"],
    "new-cap": ["error", {"capIsNewExceptionPattern" : "^Immutable\\.." }]
  },
  "env": {
    "browser": true,
    "jest": true
  }
}