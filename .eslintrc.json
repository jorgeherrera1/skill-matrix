{
  "extends": ["google", "plugin:react/recommended"],
  "plugins": ["react"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "comma-dangle": ["error", "never"],
    "require-jsdoc": "off",
    "brace-style": ["error", "1tbs", {"allowSingleLine": true}],
    "max-len": ["error", {
      "code": 100,
      "tabWidth": 2
    }]
  },
  "env": {
    "browser": true,
    "jest": true
  }
}